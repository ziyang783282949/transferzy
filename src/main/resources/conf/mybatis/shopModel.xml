<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ShopModel">

	<resultMap id="BaseResultMap" type="ShopModel">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="ticket_id" jdbcType="VARCHAR" property="ticketId" />
		<result column="user_cardno" jdbcType="VARCHAR" property="userCardNo" />
		<result column="ticket_misc" jdbcType="VARCHAR" property="ticketMisc" />
		<result column="state" jdbcType="INTEGER" property="state" />
		<result column="normal_price" jdbcType="DECIMAL" property="normalPrice" />
		<result column="user_sell_price" jdbcType="DECIMAL" property="userSellPrice" />
		<result column="user_buy_price" jdbcType="DECIMAL" property="userBuyPrice" />
	</resultMap>

	<insert id="addEntity" parameterType="java.util.Map">
		insert into
		tb_shop(
		ticket_id,user_cardno,ticket_misc,state,normal_price,user_sell_price,user_buy_price
		)values(
		#{ticketId},#{userCardNo},#{ticketMisc},#{state},#{normalPrice},#{userSellPrice},#{userBuyPrice}
		)
	</insert>

	<select id="findEntityListByCond" parameterType="java.util.Map"
		resultMap="BaseResultMap">
		select * from tb_shop
		<trim prefix="where" prefixOverrides="and">

			<if test="id != null">
				and id=#{id}
			</if>
			<if test="ticketId != null">
				and ticket_id=#{ticketId}
			</if>
			<if test="userCardNo != null">
				and user_cardno=#{userCardNo}
			</if>
			<if test="state != null">
				and state=#{state}
			</if>
		</trim>

	</select>

	<update id="updateEntity" parameterType="java.util.Map">
		update tb_shop
		<trim suffixOverrides=",">
			<set>
				<if test="state != null">
					state=#{state},
				</if>
				<if test="userCardNo != null">
					user_cardno=#{userCardNo}
				</if>
			</set>
		</trim>
		where ticket_id = #{ticketId}
	</update>
	<update id="deleteEntity" parameterType="java.util.Map">
		delete from tb_shop
		where
		ticket_id = #{ticketId} limit 1
	</update>
</mapper>