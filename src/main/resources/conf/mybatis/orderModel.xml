	<insert id="addEntity" parameterType="java.util.Map">
		insert into 
		tb_order(
			id,card_no,order_status,order_amount,order_time,event_id,event_misc,type
		)values(
			#{id},#{cardNo},#{orderStatus},#{orderAmount},#{orderTime},#{eventId},#{eventMisc},#{type}
		)
