			</if>
			<if test="orderStatus != null">
				and order_status = #{orderStatus}
			</if>
			<if test="orderStatusList != null">
				and order_status in 
				<foreach collection="orderStatusList" index="index" item="item" open="("
    				separator="," close=")">
   					 #{item}
  				</foreach> 
  			</if>	
			<if test="cardNos != null">
				and card_no in 
				<foreach collection="cardNos" index="index" item="item" open="("
    				separator="," close=")">
   					 #{item}
  				</foreach> 
			</if>
			<if test="type != null">
				and type = #{type}
			</if>
		</trim>
		
	</select>

