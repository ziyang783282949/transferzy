<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="RewardModel">

	<resultMap id="BaseResultMap" type="RewardModel">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="name" jdbcType="VARCHAR" property="name" />
		<result column="reward_info" jdbcType="VARCHAR" property="rewardInfo" />
	</resultMap>

	<insert id="addEntity" parameterType="java.util.Map">
		insert into 
		tb_reward(
			name,reward_info
		)values(
			#{name},#{rewardInfo}
		)
		
	</insert>

	<select id="findEntityListByCond" parameterType="java.util.Map" resultMap="BaseResultMap">
	
		select * from tb_reward
		<trim prefix="where" prefixOverrides="and" >
			<if test="id != null">
				and id=#{id} 
			</if>
			<if test="ids != null">
				and id in 
				<foreach collection="ids" index="index" item="item" open="("
    				separator="," close=")">
   					 #{item}
  				</foreach> 
			</if>
			<if test="name != null">
				and name=#{name}
			</if>
		</trim>
		
	</select>

	<update id="updateEntity" parameterType="java.util.Map">
		update tb_product_event
		<trim suffixOverrides = ",">
		<set>
			<if test="name != null">
				name=#{name},
			</if>
			<if test="rewardInfo != null">
				reward_info = #{rewardInfo},
			</if>
		</set>
		</trim>
		where id = #{id}
	</update>
	
</mapper>