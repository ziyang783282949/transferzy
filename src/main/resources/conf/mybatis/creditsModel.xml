<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CreditsModel">

	<resultMap id="BaseResultMap" type="CreditsModel">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="cash" jdbcType="DECIMAL" property="cash" />
		<result column="credits" jdbcType="DECIMAL" property="credits" />
		<result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
	</resultMap>

	<insert id="addEntity" parameterType="java.util.Map">
		insert into
		tb_credits(
		cash,credits
		)values(
		#{cash},#{credits}
		)
	</insert>

	<select id="findEntityListByCond" parameterType="java.util.Map"
		resultMap="BaseResultMap">

		select * from tb_credits
		<trim prefix="where" prefixOverrides="and">

			<if test="id != null">
				and id=#{id}
			</if>
			<if test="cash != null">
				and cash=#{cash}
			</if>
			<if test="credits != null">
				and credits=#{credits}
			</if>
		</trim>
	</select>

	<update id="updateEntity" parameterType="java.util.Map">
		update tb_credits
		<trim suffixOverrides=",">
			<set>
				<if test="cash != null">
					cash=#{cash},
				</if>
				<if test="credits != null">
					credits=#{credits},
				</if>
			</set>
		</trim>
		where id = #{id}
	</update>

</mapper>